<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the Department Name Below"
        android:textSize="18sp"
        android:textColor="@color/White"
        android:background="@color/AquaGreen"
        android:gravity="center"
        android:padding="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <!--<TextView
                        android:id="@+id/customeDialogBody"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Body"
                        android:textColor="@color/Black"
                        android:gravity="left"
                        android:textSize="17sp"
                        android:padding="15dp" />-->

                    <EditText
                        android:id="@+id/enterDepartmentNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Department Name"
                        android:background="@drawable/search_background"
                        android:textColor="@color/Black"
                        android:layout_margin="20dp"
                        android:layout_gravity="center"
                        android:maxLength="20"
                        android:inputType="text"
                        android:imeOptions="actionDone"
                        android:singleLine="true"/>

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:background="@color/Black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Cancel"
            android:textSize="16sp"
            android:textColor="@color/Black"
            android:background="@drawable/white_button"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Save"
            android:textSize="16sp"
            android:textColor="@color/White"
            android:background="@drawable/aqua_green_button"
            android:layout_margin="10dp"/>

    </LinearLayout>
</LinearLayout>