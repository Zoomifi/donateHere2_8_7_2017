<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disclaimer"
        android:textSize="18sp"
        android:textColor="@color/White"
        android:background="@color/AquaGreen"
        android:gravity="center"
        android:padding="15dp"/>

        <TextView
            android:id="@+id/customeDialogBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Warning: Leaving this Department Name blank will remove the current Department. Proceed?"
            android:textColor="@color/Black"
            android:gravity="center"
            android:textSize="17sp"
            android:padding="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@color/Black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/Cancel"
            android:textSize="16sp"
            android:textColor="@color/Black"
            android:background="@drawable/white_button"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yes"
            android:textSize="16sp"
            android:textColor="@color/White"
            android:background="@drawable/aqua_green_button"
            android:layout_margin="10dp"/>

    </LinearLayout>
</LinearLayout>