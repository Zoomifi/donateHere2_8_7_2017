<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/setup_day"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:text="Day"
        android:textSize="18dp"
        android:paddingLeft="2dp"
        android:textColor="@color/Black"
        android:gravity="center_vertical" />

    <View
        android:layout_width="0.25dp"
        android:layout_height="match_parent"
        android:background="@color/Black"/>

    <TextView
        android:id="@+id/setup_timer_1_from"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="12:00:00 AM"
        android:textSize="18dp"
        android:textColor="@color/Black"
        android:gravity="bottom|right"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:background="@drawable/off_gray_button"/>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/CloverAppBackgrounds"/>

    <TextView
        android:id="@+id/setup_timer_1_to"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="12:00:00 AM"
        android:textSize="18dp"
        android:textColor="@color/Black"
        android:gravity="bottom|right"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:background="@drawable/off_gray_button"/>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/CloverAppBackgrounds"/>

    <TextView
        android:id="@+id/setup_timer_1_minutes"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="00"
        android:textSize="18dp"
        android:textColor="@color/Black"
        android:gravity="center"
        android:background="@drawable/off_green_button"/>

    <View
        android:layout_width="0.25dp"
        android:layout_height="match_parent"
        android:background="@color/Black"/>

    <android.support.v4.widget.Space
        android:layout_width="60dp"
        android:layout_height="match_parent" />

    <View
        android:layout_width="0.25dp"
        android:layout_height="match_parent"
        android:background="@color/Black"/>

    <TextView
        android:id="@+id/setup_timer_2_from"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="12:00:00 AM"
        android:textSize="18dp"
        android:textColor="@color/Black"
        android:gravity="bottom|right"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:background="@drawable/off_gray_button"/>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/CloverAppBackgrounds"/>

    <TextView
        android:id="@+id/setup_timer_2_to"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="12:00:00 AM"
        android:textSize="18dp"
        android:textColor="@color/Black"
        android:gravity="bottom|right"
        android:paddingBottom="2dp"
        android:paddingRight="2dp"
        android:background="@drawable/off_gray_button"/>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/CloverAppBackgrounds"/>

    <TextView
        android:id="@+id/setup_timer_2_minutes"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="00"
        android:textSize="18dp"
        android:textColor="@color/Black"
        android:gravity="center"
        android:background="@drawable/off_green_button"/>

    <View
        android:layout_width="0.25dp"
        android:layout_height="match_parent"
        android:background="@color/Black"/>

    <android.support.v4.widget.Space
        android:layout_width="60dp"
        android:layout_height="match_parent" />

    <View
        android:layout_width="0.25dp"
        android:layout_height="match_parent"
        android:background="@color/Black"/>

    <TextView
        android:id="@+id/setup_all_other_minutes"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:text="00"
        android:textSize="18dp"
        android:textColor="@color/Black"
        android:gravity="center"
        android:background="@drawable/off_green_button"/>

    <View
        android:layout_width="0.25dp"
        android:layout_height="match_parent"
        android:background="@color/Black"/>

</LinearLayout>